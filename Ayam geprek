  <script>
    const menu = {
      original: { name: "Ayam Geprek Original", price: 18000, qty: 0 },
      keju:     { name: "Ayam Geprek Keju",     price: 22000, qty: 0 },
      super:    { name: "Ayam Geprek Super Pedes", price: 20000, qty: 0 }
    };

    const rupiah = (n) => "Rp " + n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".");
    document.getElementById("year").textContent = new Date().getFullYear();

    function stepQty(id, delta){
      menu[id].qty = Math.max(0, menu[id].qty + delta);
      document.getElementById("qty-" + id).value = menu[id].qty;
      updateCartBar();
    }

    function updateCartBar(){
      const items = Object.values(menu).filter(i => i.qty > 0);
      const total = items.reduce((s,i) => s + (i.qty * i.price), 0);

      document.getElementById("cartTitle").textContent = "Total: " + rupiah(total);

      if(items.length === 0){
        document.getElementById("cartDetail").textContent = "Belum ada pesanan";
      } else {
        const detail = items.map(i => `${i.qty}x ${i.name}`).join(" ‚Ä¢ ");
        document.getElementById("cartDetail").textContent = detail;
      }
    }

    function resetCart(){
      for(const k in menu){
        menu[k].qty = 0;
        document.getElementById("qty-" + k).value = 0;
      }
      updateCartBar();
      showToast("Pesanan direset");
    }

    function orderNow(){
      const items = Object.values(menu).filter(i => i.qty > 0);
      if(items.length === 0){
        showToast("Pilih menu dulu ya üôÇ");
        return;
      }

      const total = items.reduce((s,i) => s + (i.qty * i.price), 0);
      const lines = items.map(i => `- ${i.qty}x ${i.name} (${rupiah(i.price)})`);
      const msg =
`Halo, saya mau pesan:
${lines.join("\n")}

Total: ${rupiah(total)}
Catatan: (isi alamat / level pedas / dll)`;

      // GANTI nomor WA di bawah ini (format: kode negara tanpa +)
      const waNumber = "6281234567890";
      const url = `https://wa.me/${waNumber}?text=${encodeURIComponent(msg)}`;
      window.open(url, "_blank");
    }

    function scrollToMenu(){
      document.getElementById("menu").scrollIntoView({behavior:"smooth", block:"start"});
    }

    function copyLink(){
      navigator.clipboard.writeText(window.location.href);
      showToast("Link tersalin!");
    }

    function showToast(text){
      const t = document.getElementById("toast");
      t.textContent = text;
      t.classList.add("show");
      setTimeout(() => t.classList.remove("show"), 1400);
    }

    updateCartBar();
  </script>
</body>
